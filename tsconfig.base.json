{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noEmitOnError": true,
    "composite": true,
    "resolveJsonModule": true,
    "lib": [
      "DOM"
    ]
  }
}
